{
    "manifest_version": 2,
    "name": "Extensions Manager",
    "version": "1.2",

    "description": "Manages Google Chrome's tabs, apps and themes in just two clicks.",
    "icons": {
        "128": "icon128.png",
        "28": "icon28.png",
        "16": "icon16.png"
    },

    "browser_action": {
        "default_icon": "icon28.png",
        "default_title": "Extensions Manager",
        "default_popup": "background.html"
    },

    "permissions": [
        "management",
        "tabs"
    ]
}
